<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5mm"
        android:gravity="center"
        android:text="Conversor de Meda"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="0123456789."
        android:gravity="center"
        android:hint="Insira um valor em Euros "
        android:inputType="numberDecimal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3mm"
            android:layout_marginTop="1mm"
            android:onClick="Kwanza"
            android:layout_marginRight="2mm"
            android:text="Kwanza" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5mm"
            android:onClick="Real"
            android:layout_marginTop="1mm"
            android:layout_marginRight="5mm"
            android:text="Real" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2mm"
            android:layout_marginTop="1mm"
            android:onClick="Dolar"
            android:layout_marginRight="1mm"
            android:text="Dolar" />


</LinearLayout>
    </LinearLayout>